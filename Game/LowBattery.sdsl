shader LowBattery : Texturing, ComputeColor
{
    rgroup PerMaterial
    {
        stage Texture2D Texture;
    }
    override float4 Compute()
    {
        float BlinkSpeed = 1.5;
        float2 uv = streams.TexCoord.xy;
        float4 color = Texture.Sample(LinearSampler, uv);
        float blink = frac(BlinkSpeed * Global.Time) > 0.5 ? 1.0 : 0.3;
        return color * blink;
    }
};